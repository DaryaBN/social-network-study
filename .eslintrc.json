{
  "env": {
    "browser": true,
    "es2021": true
  },
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "ignorePackages", {"js": "always"}],
    "prefer-arrow-callback": 0,
    "mocha/prefer-arrow-callback": 2,
    "linebreak-style": 0,
    "prefer-const": 0,
    "mocha/max-top-level-suites": ["warn", {"limit": 5}]
  },
  "extends": ["airbnb", "plugin:mocha/recommended"],
  "plugins": [
    "mocha"
  ]
}